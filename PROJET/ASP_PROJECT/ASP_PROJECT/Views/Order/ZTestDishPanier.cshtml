@model ASP_PROJECT.ViewModels.ListDishViewModel

<div>
    <h1>Les plat de votre restaurant : </h1>
    <form method="post" asp-controller="Menu" asp-action="ConsultDishes">
        <table class="table">
            <tr>
                <th>Nom</th>
                <th>Description</th>
                <th>Type de plat</th>
                <th>Type de service</th>
                <th>Prix</th>
            </tr>
            @foreach (var item in Model.ListDishesDb) {
                <partial name="_ZTestDishPanierPartial.cshtml" for="@item" />
            }
        </table>
    </form>
    <a asp-controller="Menu" asp-action="Index">Retour</a>
</div>