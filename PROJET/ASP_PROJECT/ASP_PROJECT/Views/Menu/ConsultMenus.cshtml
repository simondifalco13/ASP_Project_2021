@model ASP_PROJECT.ViewModels.ListMenuViewModel

<div>
    <h1>Les plats disponibles : </h1>
    <form method="post" asp-controller="Menu">
        <table class="table">
            <tr>
                <th>Nom</th>
                <th>Description</th>
                <th>Type de service</th>
                <th>Prix</th>
                <th>Plats</th>
            </tr>
            @foreach (var item in Model.ListMenuDb) {
                <partial name="_MenuPartial.cshtml" for="@item" />
            }
        </table>
    </form>
    <a asp-controller="Restaurant" asp-action="ConsultRestaurant">Retour</a>
</div>