                        @foreach (var item in Model.Menu.DishList)
                        {
                            <p>@item.Name</p>
                        }
                    </td>
                </tr>*@
            </table>
            <table class="table">
                <tr>
                    <th>Nom</th>
                    <th>Description</th>
                    <th>Type</th>
                    <th>Service</th>
                    <th>Price</th>
                </tr>
                @foreach (var item in Model.Dlist)
                {
                    <partial name="_AddingDishesPartial" for="@item" />
                }
                <tr>
                    <td><a asp-action="Index">Annuler</a></td>
                    <td>
                        <input type="submit" asp-action="AddMenu" />
                    </td>
                </tr>
            </table>
