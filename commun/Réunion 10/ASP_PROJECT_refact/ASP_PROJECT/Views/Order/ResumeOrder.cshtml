@model ASP_PROJECT.Models.POCO.Order

<div class="align-content-center">
    <div class="alert alert-success p-2 mb-3">
        <p class="font-weight-bold">Votre commande est validée.<br />
        Merci pour votre commande chez "@Model.Restaurant.Name"</p>
    </div>
    <div class="border p-1 mb-2">
        <h3>Récapitulatif de votre commande :</h3>
        <p><b>Numéro de commande :</b>  @Model.Id</p>
        <p><b>Adresse de livraison :</b> @Model.DeliveryAdress</p>
        @if (Model.listDishOrdered.Count > 0)
        {
            <p><b>Plats de la commande :</b></p>
            <ul>
                @foreach (var dish in Model.listDishOrdered)
                {
                    <li>
                        @dish.Name : @dish.Price €
                    </li>
                }
            </ul>
        }
        @if (Model.listMenuOrdered.Count > 0)
        {
            <p><b>Menus de la commande :</b> </p>
            <ul>
                @foreach (var menu in Model.listMenuOrdered)
                {
                    <li>
                        @menu.Name : @menu.Price €
                    </li>
                }
            </ul>
        }
        <p><b>Prix total de votre commande : </b>@Model.TotalPrice €</p>
    </div>
    <a class="btn btn-primary" asp-controller="Restaurant" asp-action="ConsultRestaurant">Retour</a>
</div>