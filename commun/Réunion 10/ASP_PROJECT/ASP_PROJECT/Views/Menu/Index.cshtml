<style src="wwwroot/css/simon.css"></style>

<div class="grid-container">
    <div class="item1">
        <h2 class="display-4">Bienvenue sur la page de management de la carte</h2>
    </div>
    <div class="item2">
        <button><a asp-controller="Menu" asp-action="AddMenu">Ajouter menu</a></button>
        <button><a asp-controller="Menu" asp-action="AddDish">Ajouter plat</a></button>
        <button><a asp-controller="Menu" asp-action="ConsultDishes">Consulter plats</a></button>
        <button><a asp-controller="Restaurant" asp-action="ConsultRestaurant">Consulter Menus</a></button>
        <button><a asp-controller="Menu" asp-action="DeleteDish">Supprimer plat</a></button>
        <button><a asp-controller="Home" asp-action="Index">Retour à l'acceuil</a></button>
    </div>
</div>
@if ((String)ViewData["success"] == "true")
{
    <div class="alert-success">
        <p>Ajout du plat avec succès</p>
    </div>
}
@if ((string)ViewData["MenuAdding"] == "true")
{
    <div class="alert-success">
        <p>Ajout du menu avec succès</p>
    </div>
}
@if ((string)ViewData["MenuAdding"] == "false")
{
    <div class="alert-danger">
        <p>L'ajout du menu à échoué</p>
    </div>
}

