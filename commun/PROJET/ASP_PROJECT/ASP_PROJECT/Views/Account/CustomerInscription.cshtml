@model ASP_PROJECT.Models.POCO.Customer

@{ 
    ViewData["Title"] = "Inscription d'un client.";
}
<h1>@ViewData["Title"]</h1>
<div>
    <form asp-controller="Account" method="post" asp-action="CustomerRegister">
        <table>
            <tr>
                <td>
                    <label asp-for="Firstname"/>
                </td>
                <td>
                    <input asp-for="Firstname" />
                </td>
                <td>
                    <span asp-validation-for="Firstname" class="text-danger"/>
                </td>
            </tr>
            <tr>
                <td>
                    <label asp-for="Lastname"></label>
                </td>
                <td>
                    <input asp-for="Lastname" />
                </td>
                <td>
                    <span asp-validation-for="Lastname" class="text-danger" />
                </td>
                <td> <!-- EN ATTENTE : JE PENSE AJOUTER UN CALENDRIER OU QQCHOSE DU GENRE-->
                    <label asp-for="DoB"></label>
                </td>
                <td>
                    <input asp-for="DoB" />
                </td>
                <td>
                    <span asp-validation-for="DoB" class="text-danger" />
                </td>
            </tr>
            <tr>
                <td>
                    <label asp-for="Gender"/>
                </td>
                <td>
                    <select asp-for="Gender">
                        <option value="Male">Homme</option>
                        <option value="Female">Femme</option>
                    </select>
                </td>
            </tr>
            <tr>
                <td>
                    <label asp-for="Address"/>
                </td>
                <td>
                    <input asp-for="Address" />

                </td>
                <td>
                    <span asp-validation-for="Address" class="text-danger"/>
                </td>
            </tr>
            <tr>
                <td>
                    <label asp-for="City"/>
                </td>
                <td>
                    <input asp-for="City" />

                </td>
                <td>
                    <span asp-validation-for="City" class="text-danger"/>
                </td>
            </tr>
            <tr>
                <td>
                    <label asp-for="Pc"/>
                </td>
                <td>
                    <input asp-for="Pc" />
                </td>
                <td>
                    <span asp-validation-for="Pc" class="text-danger"/>
                </td>
            </tr>
            <tr>
                <td>
                    <label asp-for="Country"/>
                </td>
                <td>
                    <input asp-for="Country" />
                </td>
                <td>
                    <span asp-validation-for="Country" class="text-danger"/>
                </td>
            </tr>
            <tr>
                <td>
                    <label asp-for="Email"/>
                </td>
                <td>
                    <input asp-for="Email" />
                </td>
                <td>
                    <span asp-validation-for="Email" class="text-danger"/>
                </td>
            </tr>
            <tr>
                <td>
                    <label asp-for="Tel"/>
                </td>
                <td>
                    <input asp-for="Tel" />
                </td>
                <td>
                    <span asp-validation-for="Tel" class="text-danger"/>       
                </td>
            </tr>
            <tr>
                <td>
                    <a asp-action="Index">Annuler</a>
                </td>
                <td>
                    <input type="submit"/>
                </td>
            </tr>
        </table>
    </form>
</div>