@model ASP_PROJECT.Models.POCO.Restorer

<h1>Inscription d'un restaurateur : </h1>
<div>
    <form asp-controller="Account" method="post">
        <table>
            <tr>
                <td><label asp-for="Firstname"></label></td>
                <td>
                    <input asp-for="Firstname" />
                </td>
                <td><span asp-validation-for="Firstname" class="text-danger"></span></td>
            </tr>
            <tr>
                <td><label asp-for="Lastname"></label></td>
                <td>
                    <input asp-for="Lastname"/>
                </td>
                <td><span asp-validation-for="Lastname" class="text-danger"></span></td>
            </tr>
            <tr>
                <td><label asp-for="Gender"></label></td>
                <td>
                    <select asp-for="Gender">
                        <option value="Male">Homme</option>
                        <option value="Female">Femme</option>
                    </select>
                </td>
            </tr>
            <tr>
                <td><label asp-for="Adress"></label></td>
                <td>
                    <input asp-for="Adress" />

                </td>
                <td><span asp-validation-for="Adress" class="text-danger"></span></td>
            </tr>
            <tr>
                <td><label asp-for="City"></label></td>
                <td>
                    <input asp-for="City" />

                </td>
                <td><span asp-validation-for="City" class="text-danger"></span></td>
            </tr>
            <tr>
                <td><label asp-for="Pc"></label></td>
                <td>
                    <input asp-for="Pc" />
                </td>
                <td><span asp-validation-for="Pc" class="text-danger"></span></td>
            </tr>
            <tr>
                <td><label asp-for="Country"></label></td>
                <td>
                    <input asp-for="Country" />
                </td>
                <td><span asp-validation-for="Country" class="text-danger"></span></td>
            </tr>
            <tr>
                <td><label asp-for="Email"></label></td>
                <td>
                    <input asp-for="Email" />
                </td>
                <td><span asp-validation-for="Email" class="text-danger"></span></td>
            </tr>
            <tr>
                <td><label asp-for="Tel"></label></td>
                <td>
                    <input asp-for="Tel" />
                </td>
                <td><span asp-validation-for="Tel" class="text-danger"></span></td>
            </tr>
            <tr>
                <td><a asp-action="Index">Annuler</a></td>
                <td>
                    <input type="submit" asp-action="Register" />
                </td>
            </tr>
        </table>
    </form>
</div>