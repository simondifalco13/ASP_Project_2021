@model ASP_PROJECT.Models.POCO.Menu
@using ASP_PROJECT.Models.POCO

@{
    ViewData["Title"] = "Menus et plats disponibles";

    List<Menu> menus = (List<Menu>)TempData["menus"];
    <!---Plutôt faire une vue partielle plutôt -->
    List<Dish> dishes = (List<Dish>)TempData["dishes"];
}
<h1>@ViewData["Title"]</h1>
<table>
    <tr>
        <th>
            <label asp-for="Name"></label>
        </th>
        <th>
            <label asp-for="Price"></label>
        </th>
        <th>
            <label asp-for="Description"></label>
        </th>
        <!--Manque la partie des dishs ! -->
    </tr>
    @{
        foreach (Menu men in menus) {
            <tr>
                <td>
                    <label> @Html.DisplayFor(modelItem => men.Name)</label>
                </td>
                <td>
                    <label> @Html.DisplayFor(modelItem => men.Price)</label>
                </td>
                <td>
                    <label> @Html.DisplayFor(modelItem => men.Description)</label>
                </td>
                <td>
                    <form asp-controller="Order" asp-action="AddToCart">
                        <input type="hidden" name="id" value="@men.Id" />
                        <input type="submit" value="Ajouter au panier" />
                    </form>
                </td>
            </tr>
        }
    }
</table>